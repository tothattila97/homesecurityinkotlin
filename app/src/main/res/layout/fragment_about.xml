<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="200dp"
       android:src="@drawable/app_logo"
       android:layout_marginBottom="@dimen/profile_data_padding"
       android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attila_toth_production"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="@dimen/profile_data_padding"
        android:paddingTop="@dimen/about_padding"
        android:paddingBottom="@dimen/about_padding"
        android:paddingEnd="@dimen/profile_data_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debrecen_hb_4031"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="@dimen/profile_data_padding"
        android:paddingTop="@dimen/about_padding"
        android:paddingBottom="@dimen/about_padding"
        android:paddingEnd="@dimen/profile_data_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingStart="@dimen/profile_data_padding"
            android:paddingTop="@dimen/about_padding"
            android:paddingBottom="@dimen/about_padding"
            android:paddingEnd="@dimen/about_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/otthonbiztonsagbme_gmail_com"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>


</LinearLayout>